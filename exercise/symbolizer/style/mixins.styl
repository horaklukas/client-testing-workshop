table-layout()
  display: table
  width: 100%
  box-sizing: border-box
  padding: 5px
  .row
    display: table-row

    & > div
      display: table-cell
      padding: 3px

      &:last-child  // last cell to right
        text-align: right

selector-btn-style()
  box-sizing: border-box
  border: 1px solid #666
  border-radius: 3px
  box-shadow: rgba(0, 0, 0, 0.5) 0px 0px 1px 0
  cursor: pointer